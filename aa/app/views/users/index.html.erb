<%= form_with scope: :user, url: users_path, local: true do |form| %>
<%=  render 'shared/error_message' %>


<%= form.label :name %>
<%= form.text_field :name, class: 'form-control' %> <br>

<%= form.label :email %>
<%= form.email_field :email, class: 'form-control' %> <br>

<%= form.label :password %>
<%= form.password_field :password, class: 'form-control' %> <br>

<%= form.label :confirm_password %>
<%= form.password_field :cofirm_password, class: 'form-control' %> <br>

<%= form.submit "Create my account", class: 'btn btn-info' %>


 <% end %>